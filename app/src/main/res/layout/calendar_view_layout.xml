<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AACFD0"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50sp"
        android:background="@color/background_button_color"
        android:fontFamily="sans-serif-black"
        android:shadowColor="@color/black"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="60sp"
        android:textStyle="bold|italic" />

    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo" />
    <Button
        android:id="@+id/calendar_view_main_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendar_view"
        android:layout_marginHorizontal="10sp"
        android:background="#79A8A9"
        android:fontFamily="sans-serif-black"
        android:text="@string/calendar_view_main_btn"
        android:textSize="16sp"
        android:layout_marginTop="20sp"
        />
</RelativeLayout>